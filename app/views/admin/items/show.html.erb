<div class="container">
  <div calss="row">
    <div class="col mt-4">
      <h4>商品詳細</h4>
      <div calss="row">
        <div class="col d-flex">
          <%= image_tag @item.image, size: "300x200" %>
          <table class="table table-borderless">
            <tr>
              <td>商品名</td>
              <td><%= @item.name %></td>
            </tr>
            <tr>
              <td>商品説明</td>
              <td><%= @item.introduction %></td>
            </tr>
            <tr>
              <td>ジャンル</td>
              <td><%= @item.genre.name %></td>
            </tr>
            <tr>
              <td>
                税込価格
                (税抜価格)
              </td>
              <td>
                <%= @item.with_tax_price.to_s(:delimited) %>
                (<%= @item.price.to_s(:delimited) %>)
              </td>
            </tr>
            <tr>
              <td>販売ステータス</td>
              <td><%= @item.item_status %></td>
            </tr>
            <tr>
              <td><%= link_to "編集する", edit_admin_item_path(@item), class: "btn btn-success" %></td>
            </tr>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
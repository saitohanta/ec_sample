<div class="container">
  <div class='row'>
    <div class="col">
      <h4 class="mt-5">商品一覧</h4>
      <div class="text-right">
      <%= link_to "+", new_admin_item_path, class: "btn", style: "background-color: #64CCC5; color: white; mx-3" %>
      </div>
      <table class='table'>
        <thead>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </thead>
        <tbody>
          <% @items.each do |item| %>
            <tr>
              <td><%= item.id %></td>
              <td><%= link_to item.name, admin_item_path(item) %></td>
              <td><%= item.price %></td>
              <td><%= item.genre.name %></td>
              <td><%= item.item_status %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
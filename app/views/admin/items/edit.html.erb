<div class="container">
  <div class="row">
    <div class="col mt-4">
      <h4>商品編集</h4>
      <%= form_with model: @item, url: admin_item_path do |f| %>
        <table class="table table-borderless ml-5">
          <tr>
            <td>商品画像</td>
            <td><%= f.file_field :image, accept: "image/*" %></td>
          </tr>
          <tr>
            <td>商品名</td>
            <td><%= f.text_field :name,  placeholder: "商品名" %></td>
          </tr>
          <tr>
            <td>商品説明</td>
            <td><%= f.text_area :introduction, placeholder: "ここに説明文を記述します" %></td>
          </tr>
          <tr>
            <td>ジャンル</td>
            <td><%= f.collection_select :genre_id, Genre.all, :id, :name, include_blank: "--選択して下さい--" %></td>
          </tr>
          <tr>
            <td>税抜価格</td>
            <td><%= f.number_field :price, placeholder: "1000" %>円</td>
          </tr>
          <tr>
            <td>販売ステータス</td>
            <td>
              <%= f.radio_button :is_sold_out, :false, checked: true %>
              <%= f.label :status_false, "販売中" %>
            　<%= f.radio_button :is_sold_out, :true %>
              <%= f.label :status_true, "販売停止中" %>
            </td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.submit "変更を保存", class: "btn btn-success" %></td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
</div>
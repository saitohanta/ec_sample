<h4><%= @customer.full_name %>さんの会員情報編集</h4>
<%= form_with model: [:admin, @customer] do |f| %>
  会員ID
  <%= @customer.id %>
  氏名
  <%= f.text_field :last_name %><%= f.text_field :first_name %>
  フリガナ
  <%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %>
  郵便番号
  <%= f.text_field :postcode %>
  住所
  <%= f.text_field :address %>
  電話番号
  <%= f.text_field :telephone_number %>
  メールアドレス
  <%= f.text_field :email %>
  会員ステータス
  <%= f.radio_button :is_deleted, :false, checked: true %>
  <%= f.label :status_false, "有効" %>
  <%= f.radio_button :is_deleted, :true %>
  <%= f.label :status_true, "退会" %>
  <%= f.submit "変更を保存" %>
<% end %>
<div class="container">
  <div class="row">
    <div class="col">
      <h4>会員情報編集</h4>
      <table class="table table-borderless">
        <%= form_with model: @customer do |f| %>
          <tr>
            <td>氏名</td>
            <td><%= f.text_field :last_name %></td>
            <td><%= f.text_field :first_name %></td>
          </tr>
          <tr>
            <td>フリガナ</td>
            <td><%= f.text_field :last_name_kana %></td>
            <td><%= f.text_field :first_name_kana %></td>
          </tr>
          <tr>
            <td>郵便番号</td>
            <td><%= f.text_field :postcode %></td>
          </tr>
          <tr>
            <td>住所</td>
            <td><%= f.text_field :address, style: "width:80%" %></td>
          </tr>
          <tr>
            <td>電話番号</td>
            <td><%= f.text_field :telephone_number %></td>
          </tr>
          <tr>
            <td>メールアドレス</td>
            <td><%= f.text_field :email %></td>
          </tr>
          <tr>
            <td></td>
            <td><%= f.submit "編集内容を保存", class: 'btn btn-sm btn-success' %></td>
            <td><%= link_to "退会する", unsubscribe_path, class: "btn btn-sm btn-danger" %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
</div>
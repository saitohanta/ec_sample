<div class="container">
  <div class="row">
    <div class="col">
      <h4 class="my-5">マイページ</h4>
      <div class="d-flex align-items-center">
        登録情報
        <%= link_to "編集する", edit_customer_path, class: "btn btn-sm btn-success ml-1" %>
      </div>
      <table class="table table-bordered mt-2">
        <tr>
          <td class="bg-light">氏名</td>
          <td><%= @customer.full_name %></td>
        </tr>
        <tr>
          <td class="bg-light">カナ</td>
          <td><%= @customer.full_name_kana%></td>
        </tr>
        <tr>
          <td class="bg-light">郵便番号</td>
          <td><%= @customer.postcode %></td>
        </tr>
        <tr>
          <td class="bg-light">住所</td>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <td class="bg-light">電話番号</td>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <td class="bg-light">メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
      </table>
      配送先
      <%= link_to "一覧を見る", addresses_path, class: "btn btn-sm btn-primary" %>
      注文履歴
      <%= link_to "一覧を見る", orders_path, class: "btn btn-sm btn-primary" %>
    </div>
  </div>
</div>